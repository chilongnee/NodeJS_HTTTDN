  <!-- Page Content -->
  <!-- DataTables Example -->
  <div class="card mb-3">
    <div class="card-header bg-primary text-white">
      <i class="fa fa-table"></i>
      Danh sách màu sắc
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
                <th>Mã màu sắc</th>
                <th>Tên màu sắc</th>
                <th>Tổng sản phẩm</th>
            </tr>
          </thead>
          <tfoot>
            <tr>
              <th>Mã màu sắc</th>
                <th>Tên màu sắc</th>
                <th>Tổng sản phẩm</th>
            </tr>
          </tfoot>
          <tbody>
            <tr>
               <td>Mã màu sắc</td>
                <td>Tên màu sắc</td>
                <td>Tổng sản phẩm</td>
            </tr>
            <!-- Add more rows as needed -->
          </tbody>
        </table>
      </div>
    </div>
    <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
  </div>

  <br><br><br>

  <script>
    // Get all the rows in the table body
    const tableBody = document.querySelector("#dataTable tbody");
    const rows = tableBody.querySelectorAll("tr");

    // Iterate over each row and calculate the total salary
    rows.forEach((row) => {
      // Get the cells containing the original salary and forfeit values
      const originalSalaryCell = row.querySelector("td:nth-child(7)");
      const forfeitCell = row.querySelector("td:nth-child(8)");

      // Parse the salary values (remove the $ sign and convert to a number)
      const originalSalary = parseFloat(originalSalaryCell.textContent.replace("$", ""));
      const forfeit = parseFloat(forfeitCell.textContent.replace("$", ""));

      // Calculate the total salary
      const totalSalary = originalSalary - forfeit;

      // Update the total salary cell with the calculated value
      const totalSalaryCell = row.querySelector("td:nth-child(9)");
      totalSalaryCell.textContent = totalSalary.toFixed(2) + "$";
    });
  </script>
</div>